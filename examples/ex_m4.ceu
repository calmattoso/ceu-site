@define(AWAIT_COND, `
do
    loop do
        var int v1 = await $1;
        if v1 $2 $3 then
            return v1;
        end
    end
end
')

C _printf();
input int A, B;

par/or do
    loop do
        var int v = @AWAIT_COND(A, `>=', 5);
        _printf("A = %d\n", v);
    end
with
    var int v = @AWAIT_COND(B, `==', 0);
end

return 0;
