input void TERM;
par/or do
    loop do                     // the original loop never terminates
        par/and do
            await 100ms;
            _printf("Hello ");
        with
            await 250ms;
            _printf("World!\n");
        end
    end
with
    await TERM;                 // but the whole par/or terminates on TERM
                                // and kills the original loop
end
return 1;
