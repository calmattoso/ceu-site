C _printf();
input int START;
event int v1, v2;
par do
    loop do
        await v2;
        v1 = v2 + 1;
    end
with
    loop do
        await v1;
        v2 = v1 - 1;
    end
with
    // tests the constraint
    await START;
    emit v1(2);         // use 'emit' instead of '='
    _printf("v1=%2d   v2=%2d\n", v1, v2);
    emit v2(12);
    _printf("v1=%2d   v2=%2d\n", v1, v2);
    emit v1(0);
    _printf("v1=%2d   v2=%2d\n", v1, v2);
    return 0;
end
