// input event identifiers must be all in uppercase
input int MY_EVT;              // 'MY_EVT' is an event of ints
C _printf();
loop do
    var int v = await MY_EVT;  // v = next 'MY_EVT'
    _printf("MY_EVT=%d\n", v);
    if v == 0 then
        break;                 // escapes the loop when v==0
    end
end
return 0;
